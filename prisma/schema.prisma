datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


generator custom_generator {
  provider = "nestjs-prisma-graphql-crud-gen"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id                      String     @id @default(cuid())
  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt
  email                   String?    @unique
  password                String
  name                    String?
  father_or_husband_name  String?
  mobile_number           String?
  alternate_mobile_number String?
  documents               Document[]
  nominee                 Nominee?
  kyc                     KYC        @default(NOT_INITIALIZED)
  role                    Role
  membership              Membership   @default(BASIC)
  date_of_birth           String?
  demat_account           String?
  private_key             String?
  pw_id                   String?    @unique
  rm_id                   String?    @unique
}

model Document {
  id     String  @id @default(cuid())
  title  String
  url    String
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
  status STATUS  @default(PENDING)
}

model Nominee {
      user              User?   @relation(fields: [userPw_id], references: [pw_id])
      userPw_id         String @unique
      name              String?
      relationship      String
}

enum Role {
  ADMIN
  USER
}
enum Membership{
  BASIC
  ADVANCE
}

enum KYC {
  NOT_INITIALIZED
  SUBMITTED
  ONGOING
  REJECTED
  APPROVED
}

enum STATUS {
  NOT_INITILAIZED
  PENDING
  SUBMITTED
  REJECTED
}
